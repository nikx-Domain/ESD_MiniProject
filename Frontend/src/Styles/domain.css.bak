/* Professional Academia Domain Page Styling */

html {
  overflow-y: scroll;
  /* Force scrollbar to prevent layout shift */
  height: 100%;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  color: #2c3e50;
  padding: 0;
  min-height: 100vh;
  height: auto;
  overflow: auto !important;
  position: relative;
}

/* App Header - Takes 1/3 of screen */
.app-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50px 60px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  min-height: 140px;
}

.app-header h1 {
  color: white;
  margin: 0;
  font-size: 56px;
  font-weight: 800;
  letter-spacing: 4px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 25px;
}

.user-name {
  color: white;
  font-size: 22px;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.logout-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2px solid white;
  padding: 12px 28px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 18px;
  font-weight: 700;
  transition: all 0.3s;
  letter-spacing: 0.5px;
}

.logout-btn:hover {
  background-color: white;
  color: #667eea;
}

/* === TIMETABLE TAB-BASED SECTION === */

.timetable-section {
  width: 100%;
  margin: 0 auto;
  padding: 0;
  overflow: visible;
  min-width: 100%;
}

/* Sticky Navigation Wrapper - Keeps header and tabs together */
/* Sticky Navigation Wrapper - Keeps header and tabs together */
.timetable-nav-sticky {
  position: sticky;
  top: 0;
  background: rgba(245, 247, 250, 0.95);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  z-index: 1000;
  padding: 20px 60px 15px 60px;
  /* Matched horizontal padding with app-header (60px) */
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  width: 100%;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.timetable-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  flex-wrap: wrap;
  gap: 15px;
  padding: 0;
  max-width: 1600px;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

.timetable-header h2 {
  margin: 0;
  font-size: 32px;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: -0.5px;
}

.back-to-domains-btn {
  background: transparent;
  color: #667eea;
  border: 2px solid #667eea;
  padding: 10px 24px;
  border-radius: 50px;
  cursor: pointer;
  font-size: 15px;
  font-weight: 700;
  transition: all 0.3s ease;
  box-shadow: none;
}

.back-to-domains-btn:hover {
  background: #667eea;
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

/* Day Tabs */
/* Day Tabs */
.day-tabs {
  display: flex;
  gap: 12px;
  margin-bottom: 5px;
  border-bottom: none;
  overflow-x: auto;
  padding: 5px 0 10px 0;
  min-height: auto;
  flex-wrap: nowrap;
  max-width: 1600px;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

.day-tab {
  background: transparent;
  border: 1px solid transparent;
  padding: 10px 24px;
  font-size: 15px;
  font-weight: 600;
  color: #64748b;
  cursor: pointer;
  border-radius: 50px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  min-width: fit-content;
  letter-spacing: 0.3px;
}

.day-tab:hover {
  color: #667eea;
  background: rgba(102, 126, 234, 0.05);
  transform: translateY(-1px);
}

.day-tab.active {
  color: white;
  border-color: transparent;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-weight: 700;
  transform: translateY(0);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

/* Courses Grid */
.day-courses {
  min-height: 300px;
  overflow-x: auto;
  overflow-y: visible;
  padding: 20px 40px;
  max-width: 1600px;
  margin: 0 auto;
}

.no-courses {
  text-align: center;
  padding: 60px 20px;
  color: #999;
  font-size: 18px;
  font-weight: 500;
}

.courses-grid {
  display: flex;
  flex-direction: row;
  gap: 20px;
  overflow-x: auto;
  padding-bottom: 20px;
  min-width: fit-content;
}

/* Large Course Cards */
/* Large Course Cards */
.course-card-large {
  background: white;
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.04);
  border-left: 6px solid #667eea;
  padding: 32px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  display: flex;
  flex-direction: column;
  gap: 18px;
  min-width: 360px;
  max-width: 360px;
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
}

.course-card-large::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100px;
  height: 100px;
  background: linear-gradient(135deg, transparent 50%, rgba(102, 126, 234, 0.05) 50%);
  border-radius: 0 20px 0 100%;
}

.course-card-large:hover {
  box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
  transform: translateY(-8px);
}

.course-time {
  color: #667eea;
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 19px;
  font-weight: 700;
}

.course-time i {
  font-size: 18px;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 10px;
}

.course-header h3 {
  margin: 0;
  font-size: 18px;
  color: #2c3e50;
  line-height: 1.3;
  flex: 1;
  font-weight: 700;
}

.course-code-badge {
  background: #667eea;
  color: white;
  padding: 8px 18px;
  border-radius: 8px;
  font-size: 17px;
  font-weight: 700;
  letter-spacing: 0.8px;
}

.course-details {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.course-title {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
  margin-bottom: 4px;
}

.course-title h3 {
  margin: 0;
  font-size: 28px;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: -0.3px;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 10px;
  color: #555;
  font-size: 18px;
}

.detail-row i {
  color: #667eea;
  font-size: 18px;
  text-align: center;
}

.view-students-btn-large {
  display: block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
  padding: 12px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s;
  margin-top: auto;
}

.view-students-btn-large:hover {
  transform: translateX(5px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

/* Error and Loading Messages */
.error-message {
  text-align: center;
  color: #dc3545;
  padding: 20px;
  background: #ffebee;
  border-radius: 8px;
  margin: 20px;
  font-weight: 500;
}

.loading-message {
  text-align: center;
  padding: 40px;
  color: #667eea;
  font-size: 18px;
  font-weight: 500;
}

h2 {
  text-align: center;
  font-size: 24px;
  color: #34495e;
  font-weight: 500;
  margin: 40px 0 30px 0;
}

h3 {
  font-size: 20px;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 15px;
  text-align: center;
}

/* Selection container - Takes 2/3 of screen */
.selection-container {
  max-width: 1600px;
  margin: 0 auto;
  padding: 80px 60px;
  display: flex;
  gap: 60px;
  justify-content: center;
  align-items: center;
  min-height: calc(66vh);
}

/* Program category cards */
.program-category {
  flex: 1;
  min-width: 520px;
  max-width: 650px;
  background: white;
  padding: 70px 60px;
  border-radius: 28px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.program-category:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.18);
}

.program-category h3 {
  text-align: center;
  margin-bottom: 45px;
  color: #2c3e50;
  font-size: 42px;
  font-weight: 700;
  letter-spacing: 1px;
  font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
}

/* Branch buttons */
.branch-buttons {
  display: flex;
  flex-direction: column;
  gap: 28px;
}

.branch-btn {
  padding: 28px 40px;
  font-size: 26px;
  font-weight: 600;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 18px;
  cursor: pointer;
  transition: all 0.3s ease;
  letter-spacing: 2px;
  box-shadow: 0 5px 15px rgba(102, 126, 234, 0.35);
  font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
}

.branch-btn:hover {
  transform: translateY(-4px) scale(1.03);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.45);
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
}

.branch-btn:active {
  transform: translateY(-2px) scale(1.01);
}

/* Timetable section */
.timetable-section {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Timetable table */
table {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  border-collapse: separate;
  border-spacing: 0;
  background-color: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
}

th {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 18px 16px;
  text-align: left;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

td {
  padding: 16px;
  text-align: left;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  color: #555;
  font-size: 14px;
}

/* Alternating row colors */
tbody tr:nth-child(even) {
  background-color: #fafbfc;
}

tbody tr:hover {
  background-color: #f0f4f8;
  transition: background-color 0.2s ease;
}

/* View Students button */
.view-students-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 14px 28px;
  border-radius: 10px;
  cursor: pointer;
  font-size: 18px;
  font-weight: 700;
  transition: all 0.3s;
  margin-top: 8px;
}

td button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 15px rgba(102, 126, 234, 0.4);
}

td button:active {
  transform: translateY(0);
}

/* Link styling */
a {
  color: inherit;
  text-decoration: none;
}

a:hover {
  text-decoration: none;
}

/* Responsive design */
@media (max-width: 900px) {
  .selection-container {
    flex-direction: column;
    gap: 20px;
  }

  .program-category {
    min-width: 100%;
  }
}

@media (max-width: 768px) {
  h1 {
    font-size: 28px;
  }

  h2 {
    font-size: 20px;
  }

  h3 {
    font-size: 18px;
  }

  .program-category {
    padding: 20px;
  }

  .branch-btn {
    padding: 12px 20px;
    font-size: 14px;
  }

  table {
    font-size: 12px;
  }

  td,
  th {
    padding: 12px 10px;
  }

  /* Hide course ID on small screens */
  th:nth-child(1),
  td:nth-child(1) {
    display: none;
  }
}

@media (max-width: 480px) {
  body {
    padding: 10px;
  }

  .program-category {
    padding: 15px;
  }

  th:nth-child(5),
  td:nth-child(5),
  th:nth-child(6),
  td:nth-child(6) {
    font-size: 11px;
  }

  /* Hide faculty email on very small screens */
  th:nth-child(4),
  td:nth-child(4) {
    display: none;
  }
}